@* @model IEnumerable<CustomerDto> *@
@{
    Layout = "_LayoutAdmin";
    List<int> deletes = new List<int>();
}

<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="align-self-center">BẢNG ĐIỂM</h4>

    <!-- FORM DATA -->
    <div class="card mb-2"> 
        <div class="card-body">
            <div class="row">
                <div class="col-sm">
                    <div class="row ">
                        <input type="hidden" id="AcademicScoreId" />
                        <div class="col-md-6">
                            <label class="form-label m-0 p-0">Tên phiếu điểm</label>
                            <input class="form-control h-50" id="ScoreName" type="text" placeholder="" autofocus />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label  m-0 p-0">Điểm số</label>
                            <input class="form-control h-50" id="Score" placeholder="" type="number" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label  m-0 p-0">Xếp loại</label>
                            <input class="form-control h-50" id="Grade" disabled placeholder="" type="text" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label  m-0 p-0">Ngày kiểm tra</label>
                            <input class="form-control h-50" id="TestDate" placeholder="" type="text" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label  m-0 p-0">Mã Học Sinh</label>
                            <input class="form-control h-50" id="StudentId" placeholder="" type="number" />
                            <div id="showStudentView" class="dropdown-menu dropdown-menu-end w-px-300">
                                <form class="p-4 pt-3 pb-0" onsubmit="return false">
                                    <p class="fw-bold text-center">Thông tin học sinh</p>
                                    <p class="my-1" id="Student_FullName"> <span class="">Họ và Tên:</span></p>
                                    <p class="my-1" id="Student_DateOfBirth"> <span class="">Ngày sinh:</span></p>
                                    <p class="my-1" id="Student_Gender"> <span class="">Giới tính:</span></p>
                                    <p class="my-1" id="Student_DormitoryRoomName"> <span class="">Phòng ở:</span></p>
                                    <p class="my-1" id="Student_ClassName"> <span class="">Lớp học:</span></p>
                                    <p class="my-1" id="Student_Ethnicity"> <span class="">Dân tộc:</span></p>
                                    <p class="my-1" id="Student_Religion"> <span class="">Tôn giáo:</span></p>
                                </form>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-primary my-1" href="javascript:void(0)">Xem thông tin học sinh?</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label  m-0 p-0">Môn học</label>
                            <select name="CbbSubjectId" id="CbbSubjectId" style="line-height: 2;" class="form-control h-50 pt-0 pb-1">
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label  m-0 p-0">Trung tâm</label>
                            <select name="CbbTrainingCenterId" id="CbbTrainingCenterId" style="line-height: 2;" class="form-control h-50 pt-0 pb-1">
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label  m-0 p-0">Mã Giáo Viên</label>
                            <input class="form-control h-50" id="EmployeeId" placeholder="" type="number" />
                            <div id="showEmployeeView" class="dropdown-menu dropdown-menu-end w-px-300">
                                <form class="p-4 pt-3 pb-0" onsubmit="return false">
                                    <p class="fw-bold text-center">Thông tin giáo viên</p>
                                    <p class="my-1" id="Employee_EmployeeName"></p>
                                    <p class="my-1" id="Employee_DateOfBirth"></p>
                                    <p class="my-1" id="Employee_Gender"></p>
                                    <p class="my-1" id="Employee_Phone"></p>
                                    <p class="my-1" id="Employee_Email"></p>
                                </form>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-primary" href="javascript:void(0)">Xem thông tin giáo viên?</a>
                            </div>
                        </div>

                        @*                         <div class="col-md-4">
                        <label class="form-label  m-0 p-0">Phân loại người dùng</label>
                        <select name="CustomerStatusId" id="customerStatusId" class="form-control h-50" asp-items="ViewBag.CustomerStatus"></select>
                        </div>
                        <div class="col-md-4">
                        <label class="form-label  m-0 p-0">Ghi chú</label>
                        <textarea id="other" class="form-control" placeholder=""></textarea>
                        </div> *@
                    </div>
                </div>
                <div class="col-sm-3 pt-3">
                    <p id="show1">Học sinh: </p>
                    <p id="show3">Giáo viên: </p>
                    <input class="form-check-input" type="checkbox" id="showAll" checked />
                    <label class="form-check-label" for="show3">Hiển thị thông tin</label>
                </div>
            </div>
        </div>
    </div>
    <!-- /FORM DATA -->

    <!-- FORM Button -->
    <div class="pb-2 mt-2">
        <button type="button" id="btnCreateAcademicScore" class="btn btn-primary">
            Thêm
        </button>
        <span class="p-1"></span>
        <button type="button" id="btnUpdateAcademicScore" class="btn btn-primary">
            Sửa
        </button>
        <span class="p-1"></span>
        <button type="button" id="btnDeleteAcademicScore" class="btn btn-primary">
            Xóa
        </button>
        <span class="p-1"></span>
        <button type="button" id="btnResetAcademicScore" class="btn btn-primary">
            Làm mới
        </button>
        <span class="p-1"></span>
        <button type="button" id="btnSearchAcademicScore" class="btn btn-primary">
            Tìm kiếm
        </button>
    </div>
    <!-- /FORM Button -->

    <!-- Table-->
    <div class="card">
        <div class="table-responsive p-3">
            <table id="myTable" class="table">
                <thead>
                    <tr>
                        <th><input id="checkAll" type="checkbox"/></th>
                        <th>Tên điểm</th>
                        <th>Sinh viên</th>
                        <th>Giáo viên</th>
                        <th>Môn</th>
                        <th>Điểm</th>
                        <th>Xếp loại</th>
                        <th>Ngày kiểm tra</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <!--/Table-->

</div>
<!-- / Content -->
@section Scripts {
    <script src="/AdminAssets/module/support.js"></script>
    <script src="/AdminAssets/module/academicScore.js"></script>
}

